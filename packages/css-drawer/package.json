{
  "name": "css-drawer",
  "version": "0.1.0",
  "description": "Vaul-quality drawer component using native <dialog> and pure CSS animations",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/react.d.ts",
        "default": "./dist/react.js"
      },
      "require": {
        "types": "./dist/react.d.cts",
        "default": "./dist/react.cjs"
      }
    },
    "./react-minimal": {
      "import": {
        "types": "./dist/react-minimal.d.ts",
        "default": "./dist/react-minimal.js"
      },
      "require": {
        "types": "./dist/react-minimal.d.cts",
        "default": "./dist/react-minimal.cjs"
      }
    },
    "./styles": "./dist/drawer.css",
    "./drawer.css": "./dist/drawer.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.ts src/react.tsx src/react-minimal.tsx --format esm,cjs --dts --clean && cp src/drawer.css dist/",
    "dev": "tsdown src/index.ts src/react.tsx src/react-minimal.tsx --format esm,cjs --dts --watch"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "react": "^19.1.0",
    "tsdown": "^0.9.3",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "drawer",
    "bottom-sheet",
    "dialog",
    "modal",
    "css",
    "headless",
    "vaul",
    "react"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/user/css-drawer.git"
  }
}
